{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sium-duel",
  "version": "0.1.0",
  "identifier": "com.esprs.duel",
  "build": {
    "frontendDist": "../juego",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "SIUM DUEL - Arena de los Condenados",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}